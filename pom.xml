		<karaf.version>2.2.2</karaf.version>
		<guava.version>r09</guava.version>
		<junit.version>4.8.2</junit.version>
		<jersey.client.version>1.4</jersey.client.version>
		<mockito.version>1.8.5</mockito.version>
		<joda.time.version>1.6.2</joda.time.version>
		<aspectjrt.version>1.6.10</aspectjrt.version>
	</properties>

	<licenses>
		<license>
			<name>The Apache Software License, Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
			<distribution>repo</distribution>
			<comments />
		</license>
	</licenses>

	<issueManagement>
		<system>github</system>
		<url>https://github.com/awired/visuwall/issues</url>
	</issueManagement>
	<developers>
		<developer>
			<id>jsmadja</id>
			<name>Julien Smadja</name>
			<email>julien dot smadja at gmail dot com</email>
		</developer>
		<developer>
			<id>n0rad</id>
			<name>Arnaud Lemaire</name>
			<email>dev@norad.fr</email>
		</developer>
	</developers>

	<scm>
		<connection>scm:git:git://github.com/awired/visuwall.git</connection>
		<developerConnection>scm:git:git@github.com:awired/visuwall.git</developerConnection>
		<url>http://github.com/awired/visuwall</url>
	</scm>


	<dependencyManagement>
		<dependencies>
			<!-- visuwall core modules -->
			<dependency>
				<groupId>net.awired.visuwall</groupId>
				<artifactId>visuwall-component-domain</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>net.awired.visuwall</groupId>
				<artifactId>visuwall-component-persistence</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>net.awired.visuwall</groupId>
				<artifactId>visuwall-component-core</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>net.awired.visuwall</groupId>
				<artifactId>visuwall-component-web</artifactId>
				<version>${project.version}</version>
				<type>war</type>
			</dependency>
			<dependency>
				<groupId>net.awired.visuwall</groupId>
				<artifactId>visuwall-component-plugin-api</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>net.awired.visuwall</groupId>
				<artifactId>visuwall-component-cli</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>net.awired.visuwall</groupId>
				<artifactId>visuwall-component-it</artifactId>
				<version>${project.version}</version>
			</dependency>

			<!-- plugins -->
			<dependency>
				<groupId>net.awired.visuwall</groupId>
				<artifactId>visuwall-plugin-hudson</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>net.awired.visuwall</groupId>
				<artifactId>visuwall-plugin-sonar</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>net.awired.visuwall</groupId>
				<artifactId>visuwall-plugin-bamboo</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>net.awired.visuwall</groupId>
				<artifactId>visuwall-plugin-teamcity</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>net.awired.visuwall</groupId>
				<artifactId>visuwall-plugin-jenkins</artifactId>
				<version>${project.version}</version>
			</dependency>

			<!-- Themes -->
			<dependency>
				<groupId>net.awired.visuwall</groupId>
				<artifactId>visuwall-theme-visuspace</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>net.awired.visuwall</groupId>
				<artifactId>visuwall-theme-basic</artifactId>
				<version>${project.version}</version>
			</dependency>

			<!-- clients -->
			<dependency>
				<groupId>net.awired.clients</groupId>
				<artifactId>hudson</artifactId>
				<version>1.0-SNAPSHOT</version>
			</dependency>

			<dependency>
				<groupId>net.awired.clients</groupId>
				<artifactId>jenkins</artifactId>
				<version>1.0-SNAPSHOT</version>
			</dependency>

			<dependency>
				<groupId>net.awired.clients</groupId>
				<artifactId>sonar</artifactId>
				<version>1.0-SNAPSHOT</version>
			</dependency>

			<dependency>
				<groupId>net.awired.clients</groupId>
				<artifactId>teamcity</artifactId>
				<version>1.0-SNAPSHOT</version>
			</dependency>

			<dependency>
				<groupId>net.awired.clients</groupId>
				<artifactId>bamboo</artifactId>
				<version>1.0-SNAPSHOT</version>
			</dependency>

		</dependencies>
	</dependencyManagement>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>com.mycila.maven-license-plugin</groupId>
				<artifactId>maven-license-plugin</artifactId>
				<version>1.8.0</version>
				<configuration>
					<header>src/main/resources/header.txt</header>
					<strictCheck>true</strictCheck>
					<useDefaultExcludes>false</useDefaultExcludes>
					<excludes>
						<exclude>**/*.png</exclude>
						<exclude>.metadata/**</exclude>
						<exclude>.gitignore</exclude>
						<exclude>.git/**</exclude>
						<exclude>target/**</exclude>
						<exclude>.settings/**</exclude>
						<exclude>.project</exclude>
						<exclude>.classpath</exclude>
						<exclude>LICENCE</exclude>
						<exclude>README</exclude>
						<exclude>**/MANIFEST.MF</exclude>
						<exclude>src/main/webapp/WEB-INF/lib/**</exclude>
						<exclude>src/main/webapp/WEB-INF/classes/**</exclude>
						<exclude>src/main/webapp/images/**</exclude>
						<exclude>.externalToolBuilders/**</exclude>
						<exclude>.pmd/**</exclude>
						<exclude>src/test/resources/**</exclude>
						<exclude>src/main/webapp/js/jquery/**</exclude>
						<exclude>src/main/xsd/**</exclude>
						<exclude>infinitest.filters</exclude>
						<exclude>src/main/java/net/awired/visuwall/generated/**</exclude>
					</excludes>
					<executions>
						<execution>
							<goals>
								<goal>check</goal>
							</goals>
						</execution>
					</executions>
				</configuration>
			</plugin>
		</plugins>
	</build>


	<!-- distribution -->
	<distributionManagement>
		<site>
			<id>awired-web</id>
			<name>awired web deployment</name>
			<url>dav:http://projs.awired.net/visuwall</url>
		</site>
	</distributionManagement>

	<!-- plugin repos -->
	<pluginRepositories>
		<pluginRepository>
			<id>maven2-repository.java.net</id>
			<name>Java.net Repository for Maven</name>
			<url>http://download.java.net/maven/2/</url>
		</pluginRepository>
		<pluginRepository>
			<id>awired</id>
			<name>Awired public</name>
			<url>http://mvn.awired.net/nexus/content/groups/public/</url>
		</pluginRepository>
	</pluginRepositories>

	<!-- dependencies repos -->
